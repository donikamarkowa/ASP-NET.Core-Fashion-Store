<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cool Purchase Cards</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            background-color: #fff;
            border: none;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-img-top {
            border-radius: 8px 8px 0 0;
        }

        .card-title {
            font-size: 1.1rem;
            color: #343a40;
        }

        .card-text {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .full-name {
            font-size: 1rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            @foreach (var purchase in Model)
            {
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card">
                        <img class="card-img-top" src="@purchase.ImageUrl" alt="Product Image">
                        <div class="card-body">
                            <h4 class="card-title">@purchase.Name</h4>
                            <p class="card-text">
                                Seller: <span class="full-name">@purchase.SellerFullName</span><br>
                                <a href="mailto:@purchase.SellerEmail">@purchase.SellerEmail</a>
                            </p>
                            <p class="card-text">
                                Bought By: <span class="full-name">@purchase.BuyerFullName</span><br>
                                <a href="mailto:@purchase.BuyerEmail">@purchase.BuyerEmail</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>